{
  "name": "Tabs freezer",
  "description": "Freeze Chrome tabs to save memory and CPU resources.",
  "version": "0.0.0.1",
  "manifest_version": 3,
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background/background-service.js",
    "type": "module"
  },
  "action": {
    "default_popup": "mainMenu/mainMenuView.html",
    "default_title": "Freeze"
  },
  "icons": {
    "128": "icons/icon128.png"
  },

  "commands": {
    "freeze-all": {
      "suggested_key": {
        "default": "Shift+Alt+K"
      },
      "description": "Freeze all tabs"
    },
    "freeze-selected": {
      "suggested_key": {
        "default": "Shift+Alt+L"
      },
      "description": "Freeze selected tab or current tab"
    }
  }
}